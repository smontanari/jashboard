steal( 'jquery/controller','jquery/view/ejs' )
	.then( './views/init.ejs', function($){

/**
 * @class <%= name %>
 */
$.Controller('<%= name %>',
/** @Static */
{
	defaults : {}
},
/** @Prototype */
{
	init : function(){
		this.element.html("//<%= path %>/<%= underscore %>/views/init.ejs",{
			message: "Hello World"
		});
	}
})

});